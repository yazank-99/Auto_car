@model IEnumerable<project.ViewModels.CarModel>

@{
    ViewData["Title"] = "Index";
}
<div class="pagetitle">
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li class="breadcrumb-item">Car</li>
        </ol>
    </nav>
</div>
<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title d-flex justify-content-end">
                        <a asp-action="Create" class="btn btn-primary">Create New +</a>
                    </h5>
                    <table class="table datatable index-table text-break">
                        <thead>
                            <tr class="bg-danger text-white">
                                <th>
                                    @Html.DisplayNameFor(model => model.CarId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CarImgUrl1)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CarImgUrl2)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CarImgUrl3)
                                </th>
                                <th class="w-10">
                                    @Html.DisplayNameFor(model => model.CarPrice)
                                </th>
                                <th class="w-10">
                                    @Html.DisplayNameFor(model => model.CarWalking)
                                </th>
                                <th class="w-10">
                                    @Html.DisplayNameFor(model => model.CarGear)
                                </th>
                                <th class="w-10">
                                    @Html.DisplayNameFor(model => model.RentOrSale)
                                </th>
                                <th class="text-center">
                                    Operations
                                </th>
                            </tr>
                        </thead>
                        <tbody class="bg-dark-light">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="align-middle">
                                        @Html.DisplayFor(modelItem => item.CarId)
                                    </td>
                                    <td class="align-middle text-center">
                                        @if (string.IsNullOrEmpty(item.CarImgUrl1))
                                        {
                                            @ViewBag.ImageNotFound
                                        }
                                        else
                                        {
                                            <img src="~/images/AddCar/@item.CarImgUrl1" class="img img-fluid" width="120" />
                                        }
                                    </td>
                                    <td class="align-middle text-center">
                                        @if (string.IsNullOrEmpty(item.CarImgUrl2))
                                        {
                                            @ViewBag.ImageNotFound
                                        }
                                        else
                                        {
                                            <img src="~/images/AddCar/@item.CarImgUrl2" class="img img-fluid" width="120" />
                                        }
                                    </td>
                                    <td class="align-middle text-center">
                                        @if (string.IsNullOrEmpty(item.CarImgUrl3))
                                        {
                                            @ViewBag.ImageNotFound
                                        }
                                        else
                                        {
                                            <img src="~/images/AddCar/@item.CarImgUrl3" class="img img-fluid" width="120" />
                                        }
                                    </td>
                                    <td class="align-middle w-10">
                                        @Html.DisplayFor(modelItem => item.CarPrice)
                                    </td>
                                    <td class="align-middle w-10">
                                        @Html.DisplayFor(modelItem => item.CarWalking)
                                    </td>
                                    <td class="align-middle w-10">
                                        @Html.DisplayFor(modelItem => item.CarGear)
                                    </td>
                                    <td class="align-middle w-10">
                                        @if(item.RentOrSale == 1)
                                        {
                                            <span>Sale</span>
                                        }
                                        else
                                        {
                                            <span>Rent</span>
                                        }
                                    </td>
                                    <td class="align-middle text-center">
                                        <a asp-action="Edit" asp-route-id="@item.CarId">
                                            <i class="bx bxs-edit text-secondary h5"></i>
                                        </a>
                                        <a href="" data-bs-toggle="modal" data-bs-target="#deleteModal" id="btn-delete"
                                           data-path="@Url.ActionLink("Delete","Car",new {id= item.CarId})">
                                            <i class="bx bxs-trash text-danger h5"></i>
                                        </a>
                                        @if (item.IsActive)
                                        {
                                            <a asp-action="Active" asp-route-id="@item.CarId">
                                                <i class="ri-eye-fill text-success h5"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <a asp-action="Active" asp-route-id="@item.CarId">
                                                <i class="ri-eye-close-fill text-danger h5"></i>
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>