@model project.ViewModels.ContactModel

@{
    ViewData["Title"] = "Create";
}
<div class="pagetitle">
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Contact"></a></li>
            <li class="breadcrumb-item active">Create</li>
        </ol>
    </nav>
</div>
<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"></h5>
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div class="row mb-3">
                            <div class="col-6">
                                <div class="row mb-3">
                                    <label asp-for="ContactId" class="col-sm-4 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <input asp-for="ContactId" readonly class="form-control" />
                                        <span asp-validation-for="ContactId" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="row mb-3">
                                    <label asp-for="ContactName " class="col-sm-4 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <input asp-for="ContactName" class="form-control" />
                                        <span asp-validation-for="ContactName" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-6">
                                <div class="row mb-3">
                                    <label asp-for="ContactEmail" class="col-sm-4 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <input asp-for="ContactEmail" class="form-control" />
                                        <span asp-validation-for="ContactEmail" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="row mb-3">
                                    <label asp-for="ContactSubject " class="col-sm-4 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <input asp-for="ContactSubject" class="form-control" />
                                        <span asp-validation-for="ContactSubject" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                    
                            <div class="col-6">
                                <div class="row mb-3">
                                    <label asp-for="ContactQuestion " class="col-sm-4 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <input asp-for="ContactQuestion" class="form-control" />
                                        <span asp-validation-for="ContactQuestion" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            </div>
                            <div class="row mb-3">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-12 d-inline-flex justify-content-end">
                                    <a asp-action="Index" class="btn btn-success btn-backtolist">Back to List</a>
                                    <button type="submit" class="btn btn-primary">Save</button>
                                </div>
                            </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<div>
    <a asp-action="Index">Back to List</a>
</div>
