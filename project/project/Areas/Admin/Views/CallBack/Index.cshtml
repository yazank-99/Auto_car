@model IEnumerable<project.ViewModels.CallBackModel>

@{
    ViewData["Title"] = "Index";
}
<div class="pagetitle">
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li class="breadcrumb-item">Call Back</li>
        </ol>
    </nav>
</div>
<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title d-flex justify-content-end">
                        <a asp-action="Create" class="btn btn-primary">Create New +</a>
                    </h5>
                    <table class="table datatable index-table text-break">
                        <thead>
                            <tr class="bg-danger text-white">
                                <th>
                                    @Html.DisplayNameFor(model => model.CallBackId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CallBackName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CallBackPhone)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CallBackEmail)
                                </th>
                                <th class="w-10">
                                    @Html.DisplayNameFor(model => model.CallBackComment)
                                </th>
                                <th class="w-10">
                                    @Html.DisplayNameFor(model => model.CallBackChooseService)
                                </th>
                                <th class="text-center">
                                    Operations
                                </th>
                            </tr>
                        </thead>
                        <tbody class="bg-dark-light">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="align-middle">
                                        @Html.DisplayFor(modelItem => item.CallBackId)
                                    </td>
                                    <td class="align-middle w-10">
                                        @Html.DisplayFor(modelItem => item.CallBackName)
                                    </td>
                                    <td class="align-middle w-10">
                                        @Html.DisplayFor(modelItem => item.CallBackPhone)
                                    </td>
                                    <td class="align-middle w-10">
                                        @Html.DisplayFor(modelItem => item.CallBackEmail)
                                    </td>
                                    <td class="align-middle w-10">
                                        @Html.DisplayFor(modelItem => item.CallBackComment)
                                    </td>
                                    <td class="align-middle w-10">
                                        @Html.DisplayFor(modelItem => item.CallBackChooseService)
                                    </td>
                                    <td class="align-middle text-center">
                                        <a asp-action="Edit" asp-route-id="@item.CallBackId">
                                            <i class="bx bxs-edit text-secondary h5"></i>
                                        </a>
                                        <a href="" data-bs-toggle="modal" data-bs-target="#deleteModal" id="btn-delete"
                                           data-path="@Url.ActionLink("Delete","CallBack",new {id= item.CallBackId})">
                                            <i class="bx bxs-trash text-danger h5"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
