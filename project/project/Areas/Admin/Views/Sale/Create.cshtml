@model project.ViewModels.SaleModel

@{
    ViewData["Title"] = "Create";
}

<div class="pagetitle">
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="AddCar">Add Car</a></li>
            <li class="breadcrumb-item active">Create</li>
        </ol>
    </nav>
</div>

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"></h5>
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div class="row mb-3 d-flex justify-content-center">
                            <div class="col-sm-2 text-center">
                                <label asp-for="UploadImage" class="col-sm-12 text-center col-form-label">
                                    <img id="image" src="~/Admin/assets/img/notfound.svg" class="img img-fluid border border-2 border-dark rounded-3 p-5" width="300" />
                                </label>
                                <input asp-for="UploadImage" hidden onchange="loadFile(event,'#image')" class="form-control" />
                            </div>
                            <div class="col-sm-2 text-center">
                                <label asp-for="UploadImage2" class="col-sm-12 text-center col-form-label">
                                    <img id="image2" src="~/Admin/assets/img/notfound.svg" class="img img-fluid border border-2 border-dark rounded-3 p-5" width="300" />
                                </label>
                                <input asp-for="UploadImage2" hidden onchange="loadFile(event,'#image2')" class="form-control" />
                            </div>
                            <div class="col-sm-2 text-center">
                                <label asp-for="UploadImage3" class="col-sm-12 text-center col-form-label">
                                    <img id="image3" src="~/Admin/assets/img/notfound.svg" class="img img-fluid border border-2 border-dark rounded-3 p-5" width="300" />
                                </label>
                                <input asp-for="UploadImage3" hidden onchange="loadFile(event,'#image3')" class="form-control" />
                            </div>
                        </div>
                        <div class="row mb-3  d-flex justify-content-center">
                            <label asp-for="UploadImage" class="col-sm-2 text-center col-form-label"></label>
                            <label asp-for="UploadImage2" class="col-sm-2 text-center col-form-label"></label>
                            <label asp-for="UploadImage3" class="col-sm-2 text-center col-form-label"></label>

                        </div>
                        <div class="row mb-3">
                            <div class="col-6">
                                <div class="row mb-3">
                                    <label asp-for="SaleId" class="col-sm-4 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <input asp-for="SaleId" readonly class="form-control" />
                                        <span asp-validation-for="SaleId" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-6">
                                <div class="row mb-3">
                                    <label asp-for="SaleWalking" class="col-sm-4 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <input type="number" asp-for="SaleWalking" class="form-control" />
                                        <span asp-validation-for="SaleWalking" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-12 d-inline-flex justify-content-end">
                                <a asp-action="Index" class="btn btn-success btn-backtolist">Back to List</a>
                                <button type="submit" class="btn btn-primary">Save</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<div>
    <a asp-action="Index">Back to List</a>
</div>
