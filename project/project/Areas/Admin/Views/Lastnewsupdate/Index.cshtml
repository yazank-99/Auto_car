@model IEnumerable<project.ViewModels.LastnewsupdateModel>

@{
    ViewData["Title"] = "Index";
}
<div class="pagetitle">
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li class="breadcrumb-item">Lastnews Update</li>
        </ol>
    </nav>
</div>

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title d-flex justify-content-end">
                        <a asp-action="Create" class="btn btn-primary">Create New +</a>
                    </h5>
                    <table class="table datatable index-table text-break">
                        <thead>
                            <tr class="bg-dark text-white">
                                <th>
                                    @Html.DisplayNameFor(model => model.LastnewsupdateName)
                                </th>
                                <th class="w-15">
                                    @Html.DisplayNameFor(model => model.LastnewsupdateTitle)
                                </th>
                                <th class="w-15">
                                    @Html.DisplayNameFor(model => model.LastnewsupdateDesc)
                                </th>
                                <th class="w-15">
                                    @Html.DisplayNameFor(model => model.LastnewsupdateDate)
                                </th>
                                <th class="w-15">
                                    @Html.DisplayNameFor(model => model.LastnewsupdateImgeUrl)
                                </th>
                                <th class="text-center">
                                    Operations
                                </th>
                            </tr>
                        </thead>
                        <tbody class="bg-dark-light">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="align-middle">
                                        @Html.DisplayFor(modelItem => item.LastnewsupdateName)
                                    </td>
                                    <td class="align-middle">
                                        @Html.DisplayFor(modelItem => item.LastnewsupdateTitle)
                                    </td>
                                    <td class="align-middle">
                                        @Html.DisplayFor(modelItem => item.LastnewsupdateDesc)
                                    </td>
                                    <td class="align-middle">
                                        @Html.DisplayFor(modelItem => item.LastnewsupdateDate)
                                    </td>
                                    <td class="align-middle text-center">
                                        @if (string.IsNullOrEmpty(item.LastnewsupdateImgeUrl))
                                        {
                                            @ViewBag.ImageNotFound
                                        }
                                        else
                                        {
                                            <img src="~/images/Lastnewsupdate/@item.LastnewsupdateImgeUrl" class="img img-fluid" width="150" />
                                        }
                                    </td>
                                    <td class="align-middle text-center">
                                        <a asp-action="Edit" asp-route-id="@item.LastnewsupdateId">
                                            <i class="bx bxs-edit text-secondary h5"></i>
                                        </a>
                                        <a href="" data-bs-toggle="modal" data-bs-target="#deleteModal" id="btn-delete"
                                           data-path="@Url.ActionLink("Delete","Lastnewsupdate",new {id= item.LastnewsupdateId})">
                                            <i class="bx bxs-trash text-danger h5"></i>
                                        </a>
                                        @if (item.IsActive)
                                        {
                                            <a asp-action="Active" asp-route-id="@item.LastnewsupdateId">
                                                <i class="ri-eye-fill text-success h5"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <a asp-action="Active" asp-route-id="@item.LastnewsupdateId">
                                                <i class="ri-eye-close-fill text-danger h5"></i>
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

