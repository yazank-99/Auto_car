                </div>
            </div>
        </div>
        <div class="row">
          
                <div class="testimonial__slider owl-carousel">
                     @foreach (var item in Model.lstCallBack)
            {
                    <div class="col-lg-6">
                       
                                <div class="testimonial__item">
                            <div class="testimonial__item__author">
                                <div class="testimonial__item__author__text">
