<!-- Call Section Begin -->
<section class="call spad set-bg" data-setbg="/assets/img/about/call-bg.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-5 col-md-6">
                <div class="call__text">
                    <div class="section-title">
                        <h2>Provide Us With Your Opinion</h2>
                        <p>We are interested in our customers' opinions and would like to know if our services are useful and how we can improve them</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 offset-lg-1 col-md-6">
                <form asp-action="CallBack" class="call__form">
                    <div class="row">
                        <div class="col-lg-6">
                            <input type="text" placeholder="Name (optional)" asp-for="CallBack.CallBackName" >
                        </div>
                        <div class="col-lg-6">
                            <input type="email" placeholder=" Email" required asp-for="CallBack.CallBackEmail">
                        </div>
  
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <input type="number" placeholder=" phone (optional)" asp-for="CallBack.CallBackPhone">
                        </div>
                        <div class="col-lg-6">
                            <select  asp-for="CallBack.CallBackChooseService">
                                <option  value="1" >Choose Our Services</option>
                                <option value="Buy Cars">Buy Cars</option>
                                <option value="Rent Cars">Rent Cars</option>
                            </select>

                        </div>
                    </div>
                    <form asp-action="CallBack">
                        <textarea style="width: 100%;"placeholder="Type Your Comment" required asp-for="CallBack.CallBackComment"></textarea>
                        <button type="submit" class="site-btn">Submit Now</button>
                    </form>
                    
                </form>
            </div>
        </div>
    </div>
</section>
