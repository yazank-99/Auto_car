@model project.ViewModels.HomeModel
@{
    Layout = "_layout";
}

<!-- Breadcrumb End -->
<div class="breadcrumb-option set-bg" data-setbg="../assets/img/footer-bg.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Contact Us</h2>
                    <div class="breadcrumb__links">
                        <a asp-action="index" asp-controller="home"><i class="fa fa-home"></i> Home</a>
                        <span>Contact Us</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb Begin -->


<!-- Contact Section Begin -->
<section class="contact spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="contact__text">
                    <div class="section-title">
                        <h2>Let’s Work Together</h2>
                        <p>To make requests for further information, contact us via our social channels.</p>
                    </div>
                    <ul>
                        <li><span>Mon - Thu:</span> 8:00 am to 9:00 pm</li>
                        <li><span>Fri - Sat:</span> 8:00 am to 1:00 pm</li>
                        <li><span>Sunday:</span> 9:00 am to 10:00 pm</li>
                        <li><span>Wednesday:</span> Closed</li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="contact__form">
                    <form asp-action="Contact">
                        <div class="row">
                            <div class="col-lg-6">
                                <input type="text" asp-for="Contact.ContactName" placeholder="Name (optional)">
                            </div>
                            <div class="col-lg-6">
                                <input type="email" asp-for="Contact.ContactEmail" placeholder="Email" required>
                            </div>
                        </div>
                        <input type="text" asp-for="Contact.ContactSubject" placeholder="Subject (optional)">
                        <textarea asp-for="Contact.ContactQuestion" placeholder="Your Question" required></textarea>
                        <button type="submit" class="site-btn">Submit Now</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Contact Section End -->